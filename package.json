{
  "name": "cofrecash-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "",
  "author": "Guilherme",
  "license": "",
  "private": true,
  "scripts": {
    "build": "npx tsc -p tsconfig-build.json",
    "start": "npm run build && node ./dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "format": "npx prettier --write \"src/**/*.ts\"",
    "test": "npm run build && npx jest --runInBand",
    "test:unit": "jest --detectOpenHandles --testPathPattern tests/unit/.*\\.test\\.ts",
    "test:e2e": "jest --detectOpenHandles --testPathPattern tests/e2e/.*\\.test\\.ts",
    "lint": "npx prettier --loglevel silent \"src/**/*.ts\" && npx eslint \"src/**\" --no-inline-config --max-warnings 0",
    "lint:fix": "npx eslint \"src/**\" --no-inline-config --max-warnings 0 --fix"
  },
  "dependencies": {
    "@decorators/di": "^3.1.0",
    "@decorators/express": "^3.0.0",
    "@types/yamljs": "^0.2.34",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "prisma": "^5.8.1",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.4",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
